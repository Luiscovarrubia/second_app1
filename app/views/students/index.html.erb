<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-3">Student</h1>


    <% @students.each do |student| %>

    <div class="well">
        <%= student.name %>
        <%= student.age %>
        <%= link_to 'Show', student ,class:'btn btn-info'%>
        <%= link_to 'Edit', edit_student_path(student) , class:'btn btn-primary' %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-warning' %>
       </div>


    <% end %>

    <%= link_to 'New Student', new_student_path, class:'btn btn-success' %>
</div>









